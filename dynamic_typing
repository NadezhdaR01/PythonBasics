#module_1_3.py
name = "Hope"  # имя, строковый тип данных(string)
print("Name: " + name)  
age = 22  # возраст, целое число(integer)
print("Age:", age)  
age += 1.5  # изменение значения в переменной прибавлением 1.5(age =  age + 1.5), вещественное число(float)
print("New age:", age)
is_student = True  # логическое значение(boolean)
print("Is student:", is_student)
